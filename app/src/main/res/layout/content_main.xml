<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toTopOf="@id/resultTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputEditText"/>
    <TextView
            android:id="@+id/diceResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultTextView"/>

    <LinearLayout
            android:id="@+id/buttonContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diceResultTextView">

        <LinearLayout
                android:id="@+id/buttonRow1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonContainer">
            <Button
                    android:id="@+id/d4Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#FF0000"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d4" />
            <Button
                    android:id="@+id/d6Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#00FF00"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d6" />
            <Button
                    android:id="@+id/d8Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#0000FF"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d8" />

            <Button
                    android:id="@+id/d10Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#BADA55"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d10" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/buttonRow2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonContainer">
            <Button
                    android:id="@+id/d12Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#FF0FF0"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d12" />
            <Button
                    android:id="@+id/d20Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#0FFF00"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="d20" />
            <Button
                    android:id="@+id/explodeButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#0000FF"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="!" />

            <Button
                    android:id="@+id/advantageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#BADA55"
                    android:textSize="24dp"
                    android:textColor="#FFFFFF"
                    android:text="adv" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>